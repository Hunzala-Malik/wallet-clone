<% flash.each do |key, value| %>
  <div data-controller="flash-auto-hide" class="<%= flash_class(key.to_sym) %> p-6 flex items-center justify-around fixed right-0" style="margin-right: 30rem" role="alert">
    <p><%= value %></p>
    <button type="button" data-action="click->flash-auto-hide#dismiss">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
<% end %>
