<div class="flex justify-center mt-5 h-3/4">
  <div class="block space-y-8 w-11/12 p-6 bg-white border border-gray-200 rounded-lg shadow-lg">
    <%= link_to root_path, class: "text-primary text-2xl" do%>
      <i class="fa-solid fa-arrow-left"></i>
    <%end%>
    <h1 class="font-bold text-4xl text-center">User Details</h1>
    <span class="flex justify-end">
      <%= link_to "Edit Profile", edit_user_registration_path(current_user), class: 'btn-primary' %>
    </span>
    <div class="flex flex-col items-center bg-white border rounded-lg shadow w-full p-6">
      <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg" src="/docs/images/blog/image-4.jpg" alt="">
      <div class="flex flex-col justify-between p-4 leading-normal space-y-6">
        <p class="text-2xl font-bold text-gray-900 mb-2">
          Name: <span class="font-normal text-gray-700 "><%=current_user.name&.humanize%></span>
        </p>
        <p class="text-2xl font-bold text-gray-900 mb-2 ">
          Email: <span class="font-normal text-gray-700 "><%=current_user.email&.humanize%></span>
        </p>
        <p class="text-2xl font-bold text-gray-900 mb-2">
          Gender: <span class="font-normal text-gray-700 "><%=current_user.gender&.humanize%></span>
        </p>
        <p class="text-2xl font-bold text-gray-900 mb-2">
          Contact: <span class="font-normal text-gray-700 "><%=current_user.contact_no&.humanize%></span>
        </p>
        <p class="text-2xl font-bold text-gray-900 mb-2">
          CNIC: <span class="font-normal text-gray-700 "><%=current_user.cnic&.humanize%></span>
        </p>
        <p class="text-2xl font-bold text-gray-900 mb-2">
          Address: <span class="font-normal text-gray-700 "><%=current_user.address&.humanize%></span>
        </p>
      </div>
    </div>
  </div>
</div>
