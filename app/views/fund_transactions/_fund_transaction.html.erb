  <tr class="<%=row_color(transaction, current_user.id)%>">
    <td class="px-6 py-3 font-medium text-gray-900 whitespace-nowrap">You (<%= user_name(transaction.user_id) %>)</td>
    <td class="px-6 py-3 font-medium text-gray-900 whitespace-nowrap"><%= user_name(transaction.payee_id) %></td>
